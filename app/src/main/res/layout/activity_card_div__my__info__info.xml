<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.xd.aselab.chinabank_shop.activity.CardDiv.CardDiv_My_Info_Info">

    <RelativeLayout
        android:id="@+id/myInfo_status_background"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/navigation_bg"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/myInfo_nav_background"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/myInfo_status_background"
        android:background="@drawable/navigation_bg">

        <RelativeLayout
            android:id="@+id/my_info_back_btn"
            android:layout_width="45dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/back_btn_bg" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="我的信息"
            android:textColor="#fff"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/act_my_info_update"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="修改"
            android:textColor="#fff"
            android:textSize="16dp" />
    </RelativeLayout>
<TextView
    android:id="@+id/line"
    android:layout_width="match_parent"
    android:layout_below="@id/myInfo_nav_background"

    android:layout_height="10dp"
    android:background="#eaeeef"/>
    <LinearLayout
        android:id="@+id/myhead"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/line"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/myInfo_nav_background"
            android:layout_marginTop="10dp"
            android:background="#fff">

            <ImageView
                android:id="@+id/image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/default_head" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:gravity="center_vertical"
                android:text="皮总"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_toRightOf="@id/user_name"
                android:src="@drawable/right" />
        </RelativeLayout>


    </LinearLayout>
    <!--com.xd.aselab.chinabank_shop.activity.CardDiv.CircleImageView
        android:id="@+id/image"
        android:layout_below="@id/myInfo_nav_background"
        android:layout_marginTop="30dp"
        android:src="@drawable/default_head"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"/-->
    <TextView
        android:id="@+id/haaha"
        android:layout_below="@id/myhead"

        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#eaeeef" />
    <LinearLayout
        android:id="@+id/my_account_row"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/haaha"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_shop_account"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="账号"
            android:textColor="#565656"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/my_account_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="9dp"
            android:textColor="#9e9e9e"
            android:textSize="16dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/my_account_row"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/light_gray_line" />

    <LinearLayout
        android:id="@+id/my_psw_row"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/my_account_row"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_shop_psw"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="密码"
            android:textColor="#565656"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/my_psw_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="9dp"
            android:inputType="textPassword"
            android:textColor="#9e9e9e"
            android:textSize="16dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/my_psw_row"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/light_gray_line" />

    <LinearLayout
        android:id="@+id/name_row"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/my_psw_row"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="姓名"
            android:textColor="#565656"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="9dp"
            android:textColor="#9e9e9e"
            android:textSize="16dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/name_row"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/light_gray_line" />

    <LinearLayout
        android:id="@+id/type_row"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/name_row"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_shop_type"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="手机号"
            android:textColor="#565656"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="9dp"
            android:textColor="#9e9e9e"
            android:textSize="16dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/type_row"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/light_gray_line" />

    <LinearLayout
        android:id="@+id/addr_row"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/type_row"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/manager_tel"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="经理电话"
            android:textColor="#565656"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/manager_tel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="9dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#9e9e9e"
            android:textSize="16dp" />


    </LinearLayout>

    <Button
        android:id="@+id/exit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/login_btn_bg"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="#fff"
        android:textSize="16dp" />


</RelativeLayout>
