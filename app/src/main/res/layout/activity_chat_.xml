<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chat_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xd.aselab.chinabank_shop.activity.CardDiv.Chat_Activity">

    <RelativeLayout
        android:id="@+id/shop_my_management_status_bg"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/navigation_bg"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/shop_my_management_nav_bag"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/shop_my_management_status_bg"
        android:background="@drawable/navigation_bg">

        <RelativeLayout
            android:id="@+id/shop_my_management_back_btn"
            android:layout_width="45dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/return_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/back_btn_bg" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="联系人叫啥"
            android:textColor="#fff"
            android:textSize="22dp" />
        <TextView
            android:id="@+id/manage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="操作"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textSize="16dp"
            android:textColor="#fff"
            android:gravity="center_vertical"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/shop_my_management_nav_bag"
        >

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/listview"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <Button
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="发送"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon"/>
            <ImageView
                android:layout_marginLeft="20dp"

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon"/>
            <ImageView
                android:layout_marginLeft="20dp"

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
