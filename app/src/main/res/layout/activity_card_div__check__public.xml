<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.xd.aselab.chinabank_shop.activity.CardDiv.CardDiv_Check_Public">

    <RelativeLayout
        android:id="@+id/myInfo_status_background"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/navigation_bg">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/myInfo_nav_background"
        android:layout_below="@id/myInfo_status_background"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/navigation_bg">
        <RelativeLayout
            android:id="@+id/my_info_back_btn"
            android:layout_width="45dp"
            android:layout_height="match_parent">

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="22dp"
            android:text="推荐"/>

    </RelativeLayout>

    <ListView
        android:layout_marginTop="10dp"
        android:id="@+id/listView1"
        android:layout_below="@id/myInfo_nav_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/carddiv_public_item">

    </ListView>




</RelativeLayout>
