<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.xd.aselab.chinabank_shop.activity.publicChinaBankShop.LoginActivity">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:gravity="center">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="50dp"


            android:background="@drawable/bank_of_china" />
    </LinearLayout>

    <ImageView
        android:layout_below="@id/linear"
        android:id="@+id/login_account_icon"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="140dp"
        android:scaleType="fitXY"
        android:src="@drawable/username" />

    <EditText
        android:layout_marginLeft="10dp"
        android:id="@+id/login_accountText"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/login_account_icon"
        android:layout_toRightOf="@id/login_account_icon"
        android:background="@null"
        android:hint="账号/手机号"
        android:singleLine="true"
        android:textColorHint="#ff999999"
        android:textSize="17.0dp" />

    <ImageView
        android:id="@+id/act_login_account_delete"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@id/login_accountText"
        android:layout_toRightOf="@id/login_accountText"
        android:src="@drawable/delete"
        android:visibility="gone" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/login_accountText"
        android:layout_marginTop="10dp"
        android:gravity="center">
<TextView
    android:layout_width="235dp"
    android:layout_height="1dp"
    android:background="#9e9e9e"
/>
    </LinearLayout>
    <ImageView
        android:id="@+id/login_psw_icon"
        android:layout_width="26dp"
        android:layout_height="36dp"
        android:layout_alignLeft="@id/login_account_icon"
        android:layout_below="@id/login_account_icon"
        android:layout_marginTop="30dp"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/password" />

    <EditText
        android:layout_marginLeft="10dp"
        android:id="@+id/login_passwdText"
        android:layout_width="220dp"
        android:layout_height="26dp"
        android:layout_alignBottom="@id/login_psw_icon"
        android:layout_toRightOf="@id/login_psw_icon"
        android:background="@null"
        android:hint="密码"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColorHint="#ff999999"
        android:textSize="17.0dp" />
    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/login_passwdText"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="235dp"
            android:layout_height="1dp"
            android:background="#9e9e9e"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/act_login_password_delete"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@id/login_passwdText"
        android:layout_toRightOf="@id/login_passwdText"
        android:src="@drawable/delete"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_login"


            android:layout_width="168dp"
            android:layout_height="31dp"
            android:background="@drawable/login"
            android:gravity="center"
            android:text="登录"
            android:textColor="#fff"
            android:textSize="18.0sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_forget_psw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:clickable="true"
        android:textColor="@color/gray_text_most_1"
        android:text="忘记密码?"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/btn_to_shop_register"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:gravity="center"
        android:textColor="@color/gray_text_most_1"
        android:text="加盟"
        android:textSize="16dp" />


</RelativeLayout>
