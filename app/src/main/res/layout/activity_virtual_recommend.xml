<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.xd.aselab.chinabank_shop.activity.VirtualSales.VirtualRecommendActivity">

    <RelativeLayout
        android:id="@+id/worker_myPerfor_status_background"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/navigation_bg"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/worker_myPer_nav_background"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/worker_myPerfor_status_background"
        android:background="@drawable/navigation_bg">

        <RelativeLayout
            android:id="@+id/worker_performance_back_btn"
            android:layout_width="45dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/return_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/back_btn_bg" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="推荐分期"
            android:textColor="#fff"
            android:textSize="22dp" />

    </RelativeLayout>

    <TableLayout
        android:id="@+id/table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/worker_myPer_nav_background"
        android:layout_marginTop="55dp">

        <TableRow
            android:gravity="center"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:gravity="right"
                android:text="申请人姓名："
                android:textColor="#9e9e9e"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/name"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:maxLength="11"
                android:maxLines="1"
                android:textSize="16dp" />
        </TableRow>

        <TableRow
            android:gravity="center"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:gravity="right"
                android:text="联系方式："
                android:textColor="#9e9e9e"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/tel"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:textSize="16dp" />
        </TableRow>

        <TableRow
            android:gravity="center"
            android:layout_marginBottom="15dp">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:gravity="center_vertical"
                android:layout_gravity="right"
                android:maxLength="12"
                android:text="产品类型："
                android:textColor="#9e9e9e"
                android:textSize="16dp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:spinnerMode="dropdown"
                android:dropDownWidth="200dp"/>

        </TableRow>

        <TableRow
            android:gravity="center"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:gravity="right"
                android:maxLength="12"
                android:text="归属二级行："
                android:textColor="#9e9e9e"
                android:textSize="16dp" />

            <Spinner
                android:id="@+id/secondBank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:spinnerMode="dropdown"
                android:dropDownWidth="200dp"/>
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="325dp"
        android:layout_height="42dp"
        android:layout_below="@id/table_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70px"
        android:background="@drawable/login"
        android:gravity="center"
        android:text="提交"
        android:textColor="#fff"
        android:textSize="16dp" />

</RelativeLayout>









