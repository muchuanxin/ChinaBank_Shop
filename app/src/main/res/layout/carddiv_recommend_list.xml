<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:id="@+id/ff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <RelativeLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/nametextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:textColor="#000"
                android:text="申请人："
                android:textSize="16dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/nametextview"
                android:text="asdasd"
                android:textColor="#b50029"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="2dp"
                android:text="2017-9-13 15:28"
                android:textSize="12dp"
                android:textColor="#9e9e9e" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="70dp">

        <ImageView
            android:id="@+id/head"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/telephone_red" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/gg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ff"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/div_money"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:textSize="14dp"
            android:text="分期金额：10.37万元"
            android:textColor="#9e9e9e" />

        <TextView
            android:id="@+id/tel"
            android:layout_width="wrap_content"

            android:layout_height="22dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:textSize="14dp"
            android:text="联系电话：17798982321"
            android:textColor="#9e9e9e" />

        <TextView
            android:id="@+id/purchase"
            android:layout_width="wrap_content"

            android:layout_marginLeft="20dp"
            android:textSize="14dp"
            android:layout_marginTop="2dp"
            android:layout_height="22dp"
            android:gravity="center_vertical"
            android:text="购买商品：奥迪A3"
            android:textColor="#9e9e9e" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/div_num"
                android:layout_width="wrap_content"

                android:layout_marginLeft="20dp"
                android:textSize="14dp"
                android:layout_height="22dp"
                android:gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:text="分期数：1"
                android:textColor="#9e9e9e" />

            <TextView
                android:id="@+id/confirm"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="2dp"
                android:text="已确认"
                android:textColor="#b50029" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/hh"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/gg"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#eaeeef" />

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/hh"
        android:gravity="center"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/evaluation"
            android:layout_width="wrap_content"
            android:textSize="14dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="#000"
            android:text="预授信评分：23" />


    </RelativeLayout>

</RelativeLayout>
