<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.xd.aselab.chinabank_shop.activity.worker.ClerkMainPageActivity">

    <RelativeLayout
        android:id="@+id/clerk_status_background"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/navigation_bg">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/clerk_nav_mainPage"
        android:layout_below="@id/clerk_status_background"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/navigation_bg">

        <TextView
            android:id="@+id/act_main_clerk_toast_i"
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="13dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/rounded_circle"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:text="i"/>

        <TextView
            android:id="@+id/btn_clerk_main_my_contact"
            android:visibility="gone"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="18dp"
            android:text="联系人"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:textSize="22dp"
            android:text="炬云金融获客"/>

        <ImageView
            android:id="@+id/btn_main_clerk_info"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@drawable/personal_info"/>


    </RelativeLayout>

    <com.xd.aselab.chinabank_shop.fragment.ImageCycleView
        android:id="@+id/act_main_ImageCycleView"
        android:layout_below="@id/clerk_nav_mainPage"
        android:layout_width="match_parent"
        android:layout_height="180dp"/>

    <LinearLayout
        android:id="@+id/clerk_main_my_performance"
        android:layout_below="@id/act_main_ImageCycleView"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="70dp"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/my_performance"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#000"
            android:text="我的业绩"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/clerk_main_hotpoint"
        android:layout_toRightOf="@id/clerk_main_my_performance"
        android:layout_alignBottom="@id/clerk_main_my_performance"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/hot_recommend"/>

        <TextView
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#000"
            android:text="热点推荐"/>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/clerk_main_my_network"
        android:layout_below="@id/clerk_main_my_performance"
        android:layout_alignLeft="@id/clerk_main_my_performance"
        android:layout_marginTop="30dp"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/my_network"/>

        <TextView
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#000"
            android:text="银行网点"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/clerk_main_bank_benefit"
        android:layout_toRightOf="@id/clerk_main_my_network"
        android:layout_alignBottom="@id/clerk_main_my_network"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/china_bank_benefit"/>

        <TextView
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#000"
            android:text="银行福利"/>

    </LinearLayout>


</RelativeLayout>
