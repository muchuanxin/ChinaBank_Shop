<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.xd.aselab.chinabank_shop.activity.CardDiv.CardDiv_My_Performance">

    <RelativeLayout
        android:id="@+id/lobby_myPerfor_status_background"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/navigation_bg"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/lobby_myPer_nav_background"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/lobby_myPerfor_status_background"
        android:background="@drawable/navigation_bg">

        <RelativeLayout
            android:id="@+id/lobby_performance_back_btn"
            android:layout_width="45dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/return_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/back_btn_bg" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="我的业绩"
            android:textColor="#fff"
            android:textSize="22dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lobby_dataSelect"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/lobby_myPer_nav_background"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="时间范围"
            android:textColor="#9e9e9e"
            android:textSize="16dp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="#9e9e9e" />

        <LinearLayout
            android:id="@+id/timeSelect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/lobby_timeSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="最近一周"
                android:textColor="#9e9e9e"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/lobby_timeSelect"
                android:src="@drawable/next" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tab"
        android:layout_below="@id/lobby_dataSelect"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#e7e7e7"/>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tab"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:textColor="#b50029"
            android:textSize="22dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="大堂助理"/>

        <LinearLayout
            android:id="@+id/recommend_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="0dp"
                    android:gravity="left"
                    android:text="推荐办卡数量："
                    android:textColor="#2d2d2d"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/recommend_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textColor="#2d2d2d"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/forward"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/arrow_right"
                    android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:gravity="left"
                android:text="成功办卡数量："
                android:textColor="#6b6b6b"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/success_num"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="#6b6b6b"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:gravity="left"
                android:text="积分数："
                android:textColor="#6b6b6b"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/score_inall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:textColor="#6b6b6b"
                android:text="30"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:text="累计兑换的积分数："
                android:textColor="#6b6b6b"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/score_exchanged"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:gravity="left"
                android:textColor="#6b6b6b"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:gravity="left"
                android:text="累计未兑换的积分数："
                android:textColor="#6b6b6b"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/score_unchanged"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:textColor="#6b6b6b"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linear"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#e7e7e7"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="8dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="#b50029" />

            <TextView
                android:id="@+id/act_my_perf_gray_bar"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textColor="#3A3A3A"
                android:textSize="16dp"
                android:text="2018年各月办卡业务情况分析"/>

        </LinearLayout>


        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/act_kafenqi_my_perf_no_data_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:src="@drawable/no_data"
            android:visibility="gone" />

        <TextView
            android:id="@+id/act_kafenqi_my_perf_no_data_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="还没有业绩数据~"
            android:textSize="14dp"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>
