<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.xd.aselab.chinabank_shop.activity.CardDiv.CardDiv_My_Recommend_Fail">

    <RelativeLayout
        android:id="@+id/myInfo_status_background"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/navigation_bg"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/myInfo_nav_background"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/myInfo_status_background"
        android:background="@drawable/navigation_bg">

        <RelativeLayout
            android:id="@+id/my_info_back_btn"
            android:layout_width="45dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/back_btn_bg" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="推荐分期"
            android:textColor="#fff"
            android:textSize="22dp" />

    </RelativeLayout>



    <LinearLayout
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/myInfo_nav_background"

        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="评分："
            android:textSize="20dp" />

        <TextView
            android:id="@+id/final_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#B81C1E"
            android:textSize="20dp" />



    </LinearLayout>

    <TextView
        android:id="@+id/text"
        android:layout_below="@id/score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="18dp"
        android:text="授信评分太低，不建议推荐"
  />




    <TableLayout
        android:id="@+id/table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_marginTop="20dp"

        android:layout_marginLeft="35dp">

        <TableRow>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"

                android:gravity="right"
                android:maxLength="12"
                android:text="分期总金额：" />

            <EditText
                android:id="@+id/money"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:maxLength="11"
                android:textSize="16dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="right"
                android:textSize="16dp"

                android:maxLength="12"
                android:text="分期数：" />

            <EditText
                android:id="@+id/mun"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="3"
                android:textSize="16dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:gravity="right"

                android:text="购买商品：" />

            <EditText
                android:id="@+id/purchase_id"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:maxLength="45"

                android:maxLines="1"
                android:textSize="16dp" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/submit"
        android:layout_below="@id/table_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="70px"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40px"
        android:background="@drawable/login_btn_bg"

        android:textSize="16dp"
        android:text="提交"
        android:textColor="#fff" />
</RelativeLayout>
