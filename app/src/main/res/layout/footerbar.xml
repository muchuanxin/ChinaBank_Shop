<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mcx_footerbar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#fff"
    android:layout_alignParentBottom="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/mcx_footer_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/mcx_footer_home_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="fitCenter"
                android:background="#0000"
                android:clickable="false"
                android:src="@drawable/main_hui" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="12dp"
                android:typeface="sans"
                android:text="首页" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mcx_footer_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/mcx_footer_chat_btn"
                android:layout_marginTop="5dp"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:scaleType="fitCenter"
                android:background="#0000"
                android:clickable="false"
                android:src="@drawable/chat_hui" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="12dp"
                android:typeface="sans"
                android:text="微聊" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mcx_footer_tuijian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/mcx_footer_tuijian_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="fitCenter"
                android:background="#0000"
                android:clickable="false"
                android:src="@drawable/tuijian_hui" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:typeface="sans"
                android:textSize="12dp"
                android:text="推荐" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mcx_footer_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/mcx_footer_me_btn"
                android:layout_marginTop="3dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="fitCenter"
                android:background="#0000"
                android:clickable="false"
                android:src="@drawable/me_hui" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="12dp"
                android:typeface="sans"
                android:text="我的" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
