<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.xd.aselab.chinabank_shop.activity.shop.MyInfoActivity">

    <RelativeLayout
        android:id="@+id/myInfo_status_background"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/navigation_bg">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/myInfo_nav_background"
        android:layout_below="@id/myInfo_status_background"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/navigation_bg">
        <RelativeLayout
            android:id="@+id/my_info_back_btn"
            android:layout_width="45dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/back_btn_bg"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="22dp"
            android:text="个人信息"/>
        <TextView
            android:id="@+id/act_my_info_update"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="16dp"
            android:text="修改"/>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/my_account_row"
        android:layout_below="@id/myInfo_nav_background"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/label_shop_account"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:textColor="@color/black"
            android:text="账号"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/my_account_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="9dp"
            android:textColor="@color/black"
            android:textSize="18dp"/>

    </LinearLayout>

    <TextView
        android:layout_below="@id/my_account_row"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="1dp"
        android:background="@drawable/light_gray_line"/>

    <LinearLayout
        android:id="@+id/my_psw_row"
        android:layout_below="@id/my_account_row"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/label_shop_psw"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:textColor="@color/black"
            android:text="密码"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/my_psw_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="9dp"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:textSize="18dp"/>

    </LinearLayout>

    <TextView
        android:layout_below="@id/my_psw_row"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="1dp"
        android:background="@drawable/light_gray_line"/>

    <LinearLayout
        android:id="@+id/my_shop_name_row"
        android:layout_below="@id/my_psw_row"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/label_shop_name"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:textColor="@color/black"
            android:text="店铺名称"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/my_shop_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="9dp"
            android:textColor="@color/black"
            android:textSize="18dp"/>

    </LinearLayout>

    <TextView
        android:layout_below="@id/my_shop_name_row"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="1dp"
        android:background="@drawable/light_gray_line"/>

    <LinearLayout
        android:id="@+id/my_shop_type_row"
        android:layout_below="@id/my_shop_name_row"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/label_shop_type"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="店铺类型"
            android:textColor="@color/black"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/my_shop_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="9dp"
            android:textColor="@color/black"
            android:textSize="18dp"/>

    </LinearLayout>

    <TextView
        android:layout_below="@id/my_shop_type_row"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="1dp"
        android:background="@drawable/light_gray_line"/>

    <LinearLayout
        android:id="@+id/my_shop_addr_row"
        android:layout_below="@id/my_shop_type_row"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/label_shop_address"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="店铺地址"
            android:textColor="@color/black"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/my_shop_addr_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="9dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"
            android:layout_marginRight="30dp"
            android:textSize="18dp"/>

    </LinearLayout>

    <TextView
        android:layout_below="@id/my_shop_addr_row"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="1dp"
        android:background="@drawable/light_gray_line"/>

    <LinearLayout
        android:id="@+id/my_shop_tel_row"
        android:layout_below="@id/my_shop_addr_row"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/label_shop_tel"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:textColor="@color/black"
            android:text="联系电话"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/my_shop_tel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="9dp"
            android:textColor="@color/black"
            android:textSize="18dp"/>

    </LinearLayout>

    <TextView
        android:layout_below="@id/my_shop_tel_row"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="1dp"
        android:background="@drawable/light_gray_line"/>

    <LinearLayout
        android:id="@+id/my_shop_managerTel_row"
        android:layout_below="@id/my_shop_tel_row"
        android:layout_marginLeft="30dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="联系人电话"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/my_shop_managerTel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="9dp"
            android:textSize="18dp"/>

    </LinearLayout>

    <TextView
        android:layout_below="@id/my_shop_managerTel_row"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="1dp"
        android:background="@drawable/light_gray_line"/>

    <LinearLayout
        android:id="@+id/my_shop_erweima_row"
        android:layout_below="@id/my_shop_managerTel_row"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/label_shop_mingpian"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="名片"
            android:textColor="@color/black"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/my_erweima_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="9dp"
            android:textColor="@color/black"
            android:text="我的二维码"
            android:textSize="18dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/tuichu_my_info"
        android:layout_below="@id/my_shop_erweima_row"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="退出"
        android:textSize="20dp"
        android:textColor="#fff"
        android:background="@drawable/login_btn_bg"/>

</RelativeLayout>
