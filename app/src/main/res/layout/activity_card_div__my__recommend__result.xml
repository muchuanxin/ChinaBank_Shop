<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.xd.aselab.chinabank_shop.activity.CardDiv.CardDiv_My_Recommend_Result">

    <RelativeLayout
        android:id="@+id/worker_myPerfor_status_background"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/navigation_bg"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/worker_myPer_nav_background"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/worker_myPerfor_status_background"
        android:background="@drawable/navigation_bg">

        <RelativeLayout
            android:id="@+id/worker_performance_back_btn"
            android:layout_width="45dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/return_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/back_btn_bg" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="推荐分期"
            android:textColor="#fff"
            android:textSize="22dp" />

    </RelativeLayout>

    <com.xd.aselab.chinabank_shop.util.PercentView
        android:id="@+id/percent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="105dp" />

    <LinearLayout
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/worker_myPer_nav_background"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:orientation="vertical">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评分"
            android:textColor="#9e9e9e"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="81"

            android:textColor="#000"
            android:textSize="55dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/evaluate_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评估时间：2017-11-01"
            android:textColor="#9e9e9e"
            android:textSize="14dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/score"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text=" 根据用户信用情况显示是否~"
            android:textColor="#9e9e9e"
            android:textSize="16dp"


            />
    </LinearLayout>


    <TextView
        android:id="@+id/flag"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/score"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:background="#bfbfbf" />

    <TableLayout
        android:id="@+id/table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/flag"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp">

        <TableRow>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="32dp"

                android:gravity="right"
                android:maxLength="12"
                android:text="分期总金额(元)："
                android:textColor="#9e9e9e"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/money"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:inputType="numberDecimal"
                android:maxLength="11"
                android:maxLines="1"
                android:textColor="#9e9e9e"
                android:textSize="16dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="32dp"
                android:gravity="right"
                android:maxLength="12"
                android:text="分期数："
                android:textColor="#9e9e9e"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/mun"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:inputType="number"
                android:maxLength="3"
                android:maxLines="1"
                android:textColor="#9e9e9e"
                android:textSize="16dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:gravity="right"
                android:text="购买商品："
                android:textColor="#9e9e9e"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/purchase_id"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:maxLength="45"
                android:maxLines="1"
                android:textColor="#9e9e9e"
                android:textSize="16dp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/table_layout"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/submit"
            android:layout_width="325dp"
            android:layout_height="42dp"
            android:layout_marginTop="60px"
            android:background="@drawable/login"
            android:gravity="center"
            android:text="提交"
            android:textColor="#fff"
            android:textSize="16dp" />
    </LinearLayout>

    <Button
        android:id="@+id/before_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/table_layout"
        android:layout_marginBottom="70px"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50px"
        android:background="@drawable/login_btn_bg"

        android:text="继续推荐"
        android:textColor="#fff"
        android:textSize="16dp"
        android:visibility="gone" />

</RelativeLayout>
