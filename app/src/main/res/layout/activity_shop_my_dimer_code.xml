<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.xd.aselab.chinabank_shop.activity.shop.ShopMyDimerCode">

    <RelativeLayout
        android:id="@+id/shop_dimerCode_status_background"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/navigation_bg">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/shop_dimerCode_nav_background"
        android:layout_below="@id/shop_dimerCode_status_background"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/navigation_bg">
        <RelativeLayout
            android:id="@+id/shop_dimerCode_back_btn"
            android:layout_width="45dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/back_btn_bg"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="22dp"
            android:text="我的二维码"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/shop_dimerCode_txt"
        android:layout_below="@id/shop_dimerCode_nav_background"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:textSize="17dp"
        android:textColor="#B22222"
        android:text="注：业务扩展员扫描二维码即可注册加入商户"/>

    <RelativeLayout
        android:layout_below="@id/shop_dimerCode_txt"
        android:layout_marginTop="40dp"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/im_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />
    </RelativeLayout>


</RelativeLayout>
